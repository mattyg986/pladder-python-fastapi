# OpenAI Settings - Required for both development and production
OPENAI_API_KEY=your_openai_api_key_here

# Environment - Used to determine if we're in development or production
# In Railway, this will be set to 'production' automatically by railway.json
RAILWAY_ENVIRONMENT=development

# Database URL - In development, use SQLite
# In Railway, this will be provided as an environment variable if you add a PostgreSQL service
DATABASE_URL=sqlite:///./app.db

# Redis URL - In development, use local Redis
# In Railway, this will be provided as REDIS_URL when you add a Redis service
REDIS_URL=redis://localhost:6379/0

# Secret Key - Used for token generation, session cookies, etc.
# In Railway, this will be generated automatically via app.json
# Run `openssl rand -hex 32` to generate a new secret key
SECRET_KEY=your_secret_key_here

# Frontend URL - For CORS settings
# In production, this will be your Railway app URL
FRONTEND_URL=http://localhost:3000

# API URL - For frontend to call the backend
# In production, this will be your Railway app URL + /api/v1
API_URL=http://localhost:8000/api/v1

# Port - Default port for the FastAPI server
# In Railway, this will be provided as PORT
PORT=8000 